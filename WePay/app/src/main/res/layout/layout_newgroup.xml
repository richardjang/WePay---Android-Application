<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:weightSum="1">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Create Group"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        />
    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="148dp"
        android:orientation="horizontal"
        android:id="@+id/newRadioGroup"
        >
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:id="@+id/newIcon1"
            android:buttonTint="@color/white"
            android:background="@drawable/group1"
            />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:buttonTint="@color/white"
            android:id="@+id/newIcon2"
            android:background="@drawable/group2"/>
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:buttonTint="@color/white"
            android:id="@+id/newIcon3"
            android:background="@drawable/group3"/>
    </RadioGroup>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Choose Your Group Icon Above"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:padding="5dp"
        android:id="@+id/ChooseGroupCaption"
        />
    <EditText
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Enter Group Name Here!"
        android:inputType="text"
        android:textColor="@color/white"

        android:padding="5dp"
        android:id="@+id/newName"
        />
    <EditText
        android:textColor="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textColorHint="@color/white"
        android:hint="Enter a brief group description here!"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:id="@+id/newDesc"

        android:layout_weight="0.57"
        />
    <Button


        android:layout_marginBottom="20dp"
        android:background="#C0C0C0"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="Create!"
        android:padding="5dp"
        android:id="@+id/newMake"
        />
</LinearLayout>