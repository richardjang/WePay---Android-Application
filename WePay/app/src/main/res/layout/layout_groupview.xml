<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/groupIcon"
            android:layout_width="155dp"
            android:layout_height="130dp"
            android:src="@drawable/group1" />

        <TextView
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="20dp"
            android:text="NAME:"
            android:textColor="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="94dp"
        android:layout_marginTop="15dp"
        android:padding="5dp">


        <TextView
            android:id="@+id/groupFunds"
            android:layout_width="95dp"
            android:layout_height="42dp"
            android:text="Funds Available:"
            android:textAlignment="center"
            android:textColor="@color/white"

            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/numberofMembers"
                android:layout_width="95dp"
                android:layout_height="42dp"
                android:layout_marginLeft="60dp"
                android:text="# of Members:"
                android:textAlignment="center"
                android:textColor="@color/white"

                />

            <Button
                android:id="@+id/viewmems"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60dp"
                android:text="View Members" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/groupDescription"
        android:layout_width="fill_parent"
        android:layout_height="77dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:text="DESCRIPTION:"
        android:textColor="@color/white" />


    <LinearLayout
        android:id="@+id/joinedArea"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:padding="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/admin"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:visibility="gone"
            android:text="Admin Settings"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/addfunds"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:visibility="gone"
            android:text="Add Funds"
            android:textSize="18dp"
            />

        <Button
            android:id="@+id/treasurer"
            android:layout_width="110dp"
            android:visibility="gone"
            android:layout_height="90dp"
            android:text="Treasurer Settings"
            android:textSize="15dp"
            />


    </LinearLayout>

    <Button
        android:id="@+id/join"
        android:layout_width="202dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Join Group" />


</LinearLayout>